<Defs>

<ThingDef ParentName="pphhyy_BaseShield" MayRequire="OskarPotocki.VanillaFactionsExpanded.Core">
    <defName>pphhyy_Barbarian_MetalShield</defName>
    <label>Barbarian Metal Shield</label>
    <description>A Metal shield looted from the battlefield.</description>
    <equipmentType>None</equipmentType>
    <graphicData>
      <texPath>Shields/Barbarian_MetalShield</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <techLevel>Neolithic</techLevel>
    <statBases>
      <WorkToMake>100</WorkToMake>
      <MaxHitPoints>200</MaxHitPoints>
      <Mass>2.0</Mass>
    </statBases>
    <equippedStatOffsets>
      <ShootingAccuracyPawn>-0.5</ShootingAccuracyPawn>
      <MoveSpeed>-1.6</MoveSpeed>
	  <Flammability>0.3</Flammability>
	  <ArmorRating_Sharp>0.396</ArmorRating_Sharp>
	  <ArmorRating_Blunt>0.198</ArmorRating_Blunt>
	  <ArmorRating_Heat>0.264</ArmorRating_Heat>
    </equippedStatOffsets>
    <weaponTags>
      <li>pphhyy_Barbarian_BarbMetalShield1</li>
    </weaponTags>
    <comps>
		<li Class="VEF.Apparels.CompProperties_Shield">
			<shieldTags>
				<li>pphhyy_Barbarian_BarbMetalShield1</li>
			</shieldTags>
			<useDeflectMetalEffect>false</useDeflectMetalEffect>
			<coveredBodyPartGroups>
				<li>Neck</li>
				<li>Torso</li>
				<li>Arms</li>
				<li>Hands</li>
			</coveredBodyPartGroups>
			<offHandGraphicData>
				<texPath>Shields/Barbarian_MetalShield</texPath>
				<graphicClass>Graphic_Multi</graphicClass>
				<shaderType>CutoutComplex</shaderType>
			</offHandGraphicData>
			<offHandHoldOffset>
				<northDefault>
					<offset>(-0.25, 0, 0.2)</offset>
					<behind>true</behind>
				</northDefault>
				<east>
					<offset>(-0.15, 0, 0.1)</offset>
					<behind>true</behind>
				</east>
				<south>
					<offset>(0.25, -0.047, 0.15)</offset>
				</south>
				<west>
					<offset>(0.15, -0.05, 0.1)</offset> 
					<behind>true</behind>
				</west>
			</offHandHoldOffset>
		</li>
    </comps>
    <tools>
      <li>
        <label>side</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>5</power>
        <cooldownTime>0.8</cooldownTime>
      </li>
      <li>
        <label>buckle</label>
        <labelUsedInLogging>false</labelUsedInLogging>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8.0</power>
        <cooldownTime>1.3</cooldownTime>
      </li>
    </tools>
  </ThingDef>

